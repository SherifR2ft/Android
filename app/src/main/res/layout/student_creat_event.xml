<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:background="@color/white"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.boghdady.campusapp.StudentScreen.StudentCreateEvent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:weightSum="1">

        <com.example.boghdady.campusapp.helper.CustomTextView
            android:text="اضافة ايفينت"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"

            android:id="@+id/signup_Event"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="2"
            android:layout_marginRight="30dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/login_container"
            android:layout_marginTop="10dp">


            <com.example.boghdady.campusapp.helper.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/student_name"
                android:paddingLeft="15dp"
                android:textSize="15sp"
                android:background="@android:color/transparent"

                android:textColor="@color/black"
                android:layout_weight="1"
                android:textColorHint="#99a0ab"
                android:paddingRight="10dp"

                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                tools:ignore="RtlCompat"
                android:id="@+id/ed_EventName"
                />
            <ImageView
                android:src="@drawable/user"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_weight=".5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="30dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/login_container"
            android:layout_marginTop="10dp">


            <com.example.boghdady.campusapp.helper.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="تفاصيل الايفينت"
                android:layout_gravity="center"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="6"
                android:paddingLeft="15dp"
                android:textSize="15sp"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:textColorHint="#99a0ab"
                android:paddingRight="10dp"

                android:layout_marginLeft="20dp"
                android:gravity="center"
                tools:ignore="RtlCompat"
                android:id="@+id/ed_EventDetails"
                />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"

            android:id="@+id/signup_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="2"
            android:layout_marginRight="30dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/login_container"
            android:layout_marginTop="10dp">


            <com.example.boghdady.campusapp.helper.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="لينك الايفينت"
                android:paddingLeft="15dp"
                android:textSize="15sp"
                android:background="@android:color/transparent"

                android:textColor="@color/black"
                android:layout_weight="1"
                android:textColorHint="#99a0ab"
                android:paddingRight="10dp"

                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                tools:ignore="RtlCompat"
                android:id="@+id/ed_EventLink"
                />
            <ImageView
                android:src="@drawable/user"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">

        <com.example.boghdady.campusapp.helper.CustomEditText
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:textColorHint="#cfcfcf"
            android:textDirection="rtl"
            android:paddingBottom="10dp"
            android:textColor="#556080"
            android:id="@+id/ed_EventDate"
            android:layout_marginTop="10dp"
            android:hint="تاريخ الايفينت"
            android:paddingLeft="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:gravity="right|center"
            android:editable="false"
            android:drawableLeft="@drawable/calendar"
            android:paddingRight="10dp"
            android:background="@drawable/edit_text_custom_shape"
            android:layout_height="40dp"
            />
</LinearLayout>
        <LinearLayout
            android:layout_marginLeft="90dp"
            android:textColor="#fff"
            android:id="@+id/signup_skipTohome"
            android:orientation="vertical"
            android:background="@drawable/rounded_empty_btn"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <com.example.boghdady.campusapp.helper.CustomTextView
                android:layout_width="match_parent"
                android:text="اختر مكان الايفينت"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
